{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "experimentalDecorators": false,
    "strict": true,
    "module": "ES2022",
    "target": "ES2020",
    "lib": ["ES2023"],
    "moduleResolution": "Bundler",
    "checkJs": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "ags/gtk4",
    "paths": {
      "astal": ["/usr/share/astal/gjs"],
      "astal/*": ["/usr/share/astal/gjs/*"]
    }
  }
}
